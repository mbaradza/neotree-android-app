<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title -->
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@android:color/black"/>-->

    <TextView
        android:id="@+id/pdf_diagnosis_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:background="@color/colorSectionBackground"
        android:textAppearance="@style/TextAppearance.Pdf.Body.Bold"
        android:paddingTop="@dimen/view_vertical_spacing_smaller"
        android:paddingBottom="@dimen/view_vertical_spacing_smaller"
        android:paddingLeft="@dimen/view_horizontal_spacing_default"
        android:paddingRight="@dimen/view_horizontal_spacing_default"
        android:text="@string/pdf_label_diagnosis_title"/>

    <LinearLayout
        android:id="@+id/pdf_diagnosis_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/pdf_management_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:background="@color/colorSectionBackground"
        android:textAppearance="@style/TextAppearance.Pdf.Body.Bold"
        android:paddingTop="@dimen/view_vertical_spacing_smaller"
        android:paddingBottom="@dimen/view_vertical_spacing_smaller"
        android:paddingLeft="@dimen/view_horizontal_spacing_default"
        android:paddingRight="@dimen/view_horizontal_spacing_default"
        android:text="@string/pdf_label_management_title"/>

    <LinearLayout
        android:id="@+id/pdf_management_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>