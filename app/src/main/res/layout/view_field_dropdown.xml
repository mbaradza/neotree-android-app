<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/field_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <include layout="@layout/include_view_field_label" />

    <Button
        style="@style/AppTheme.Widget.Spinner.Underlined"
        android:id="@+id/field_dropdown_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/include_view_field_error" />

</LinearLayout>